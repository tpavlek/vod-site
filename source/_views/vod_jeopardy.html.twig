<article class="jeopardy-vod">
    <a href="{{ vod.url }}"><h2>{{ vod.title }}</h2></a>
    <div class="pure-g">
        <div class="pure-u-1 pure-u-md-2-3">
            <div class="vod-wrapper">
                <iframe
                        width="90%"
                        height="480"
                        src="//www.youtube.com/embed/{{vod.video}}"
                        frameborder="0"
                        allowfullscreen>
                </iframe>
            </div>

            <div class="summary">
                {{ vod.blocks.content|raw }}
            </div>

        </div>
        <div class="pure-u-1 pure-u-md-1-3 is-centered">
            <h2>Host</h2>
            {% for caster in vod.casters %}
                {% include 'caster' with {'caster':caster} %}
            {% endfor %}

            <h2>Participants</h2>
                {% for team in vod.teams %}
                    {% include 'jeopardy_participant.html.twig' with {'team':team} %}
                {% endfor %}
        </div>
    </div>
    <div class="article-wrapper">
        <!-- this causes the background to be displayed -->
    </div>

</article>
