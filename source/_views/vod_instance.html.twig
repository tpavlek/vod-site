<article>
    <a href="{{ vod.url }}"><h2>{{ vod.title }}</h2></a>
    <div class="pure-g">
        <div class="pure-u-2-3">
            <div class="vod-wrapper">
                <iframe
                        width="90%"
                        height="480"
                        src="//www.youtube.com/embed/{{vod.video}}"
                        frameborder="0"
                        allowfullscreen>
                </iframe>
            </div>
        </div>
        <div class="pure-u-1-3">
            {% for caster in vod.casters %}
                {% include 'caster' with {'caster':caster} %}
            {% endfor %}
        </div>
    </div>
    {{ vod.blocks.content|raw }}
    {# TODO I want to shuffle this list #}
    {% set tag_list = [1, 2, 3, 4, 5, 6, 7, 8] %}
    <p class="tags">
        {% for team in vod.teams %}
            <a href="vod/teams/{{ team }}" class="tag tag-{{ tag_list[loop.index % 8] }}">{{ team }}</a>
        {% endfor %}
    </p>
</article>